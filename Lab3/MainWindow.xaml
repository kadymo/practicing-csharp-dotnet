<Window x:Class="Lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meu Primeiro App" Height="300" Width="400">
    <Grid>
        <TextBlock x:Name="GreetingText" 
                   Text="Clique no botão abaixo"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="20"
                   Margin="0,0,0,50" />
        
        <Button x:Name="RevelationButton"
                Content="Clique Aqui!" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="120"
                Height="40"
                Click="RevelationButton_Click" />
        
        <TextBlock x:Name="RevelationText" 
                   Text=""
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="20"
                   Margin="0,0,0,50" />
    </Grid>
</Window>